const {MongoClient} = require("mongodb");
const uri = "mongodb+srv://23pa1a05n3:gowth123@testing.6c5figf.mongodb.net/?appName=Testing";
const client = new MongoClient(uri);
console.log("Client connected");

async function run() {
    try {
        const db = client.db("StudentsDB");
        console.log("Database Created");

        const students = db.collection("students");
        console.log("Students collection created");

        await students.insertOne({
            name: "Gowthami",
            age: 20
        })
        console.log("Data inserted into students");

        await db.collection("students").drop();
        console.log("Dropped students collection");

        await db.dropDatabase();
        console.log("")
    }
    catch(e) {
        console.log("Err : ", e);
    } finally {
        client.close();
Â Â Â Â }
}

run();

//1
const express = require('express');
const app = express();
app.use(express.json()); // for parsing JSON body

// â¿¡ Home route
app.get('/', (req, res) => res.send('Welcome to the Home Page!'));

// â¿¢ About route
app.get('/about', (req, res) => res.send('This is the About Page.'));

// â¿£ Route with parameter
app.get('/user/:id', (req, res) => {
  res.send(User ID: ${req.params.id});
});

// â¿¤ Route with query parameters
app.get('/search', (req, res) => {
  const { q } = req.query;
  res.send(q ? Search results for: ${q} : 'No search query provided.');
});

// â¿¥ POST route (contact form)
app.post('/contact', (req, res) => {
  const { name, message } = req.body;
  res.send(Thanks ${name}, we received your message: "${message}");
});

// Start server
app.listen(3000, () => console.log('Server running on http://localhost:3000'))

